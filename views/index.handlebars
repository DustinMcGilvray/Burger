<div class="container">
    <header>
        <h3>Welcome</h3>
        <p>to</p>
        <h1>CODE BURGER</h1>
        <h5>"Serving Up Fresh Code Daily!"</h5>
    </header>

    <div class="row">
        <div id="name-burger" class="twelve columns">

            <form class="create-form">

                <div class="form-group">
                    <label for="bn">Order Here</label>
                    <input type="text" id="bn" name="burger_name" placeholder="Burger Name Here">
                </div>

                <button type="submit">Order Up!</button>

            </form>

        </div>
    </div>



    <div class="row">
        <div id="ready-eat" class="six columns">
            <h4>Ready to Eat</h4>

            <ol>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ol>
        </div>


        <div id="devoured-burgers" class="six columns">
            <h4>Devoured Burgers</h4>

            <ol>
                {{#each burgers}}
                {{#if devoured}}
                <p>
                    {{> burgers/trash-block devoured=true}}
                </p>
                {{/if}}
                {{/each}}
            </ol>

        </div>
    </div>

</div>